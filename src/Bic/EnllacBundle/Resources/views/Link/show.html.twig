{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Link</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Enllac</th>
                <td>{{ entity.enllac }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Descrip</th>
                <td>{{ entity.descrip }}</td>
            </tr>
            <tr>
                <th>Iconurl</th>
                <td>{{ entity.iconUrl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('link') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('link_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('link_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
